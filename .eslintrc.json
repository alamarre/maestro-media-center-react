{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "env" : {
        "node" : false,
        "browser": true
    },
    "globals": {
        "Promise": true,
        "require": true,
        "module": true,
        "process": true
    },
    "rules": {
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "indent": ["error", 2],
        "comma-dangle": ["error", "always"],
        "no-cond-assign": ["error", "always"],
        "no-console": "off",
        "prefer-const": "error",
        "strict": ["error", "global"]
    }
}
